@using Gestion.Core.Entities
@model Venta

@{
    ViewData["Title"] = "Alta Venta";
}

<h1>Agregar Nueva Venta</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GuardarVenta">
            
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" type="number" min="1" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Producto</label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ListaProductos"></select>
            </div>
            <br />
            <div class="form-group">
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger">
                        @ViewBag.Error
                    </p>
                }

                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista de Ventas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
