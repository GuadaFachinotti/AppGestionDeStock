@{
    ViewData["Title"] = "MichiInicio";
}

<div class="container text-center">
    <h1 class="display-4">Bienvenidos a MichiMercado</h1>
    <div class="row mt-5">
        <div class="col-md-4">
            <img src="~/images/Designer.jpeg" alt="Michi Mercado" class="img-fluid mb-4" style="max-width: 100%">
        </div>
        <div class="col-md-4">
            <div class="card text-center border-dotted mb-4">
                <div class="card-body">
                    <h2 class="card-title">COMPRAS</h2>
                    <p class="card-text">Accede a la lista de MichiCompras.</p>
                    <a href="@(Url.Action("Index", "Compras"))" class="btn btn-primary">Ir a Compras</a>
                </div>
            </div>
            <div class="card text-center border-dotted">
                <div class="card-body">
                    <h2 class="card-title">VENTAS</h2>
                    <p class="card-text">Accede a la lista de MichiVentas.</p>
                    <a href="@(Url.Action("Index", "Ventas"))" class="btn btn-primary">Ir a Ventas</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <img src="~/images/Designerizq.jpeg" alt="Michi Mercado" class="img-fluid mb-4" style="max-width: 100%">
        </div>
    </div>
</div>

<style>
    .card {
        width: 100%;
    }

    .border-dotted {
        border: 2px dotted #000; /* Puedes ajustar el grosor y el color del borde según tus preferencias */
    }
</style>
